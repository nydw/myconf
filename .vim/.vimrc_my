"================================================================================
"pc personal config
"================================================================================
set nocompatible
set viminfo='20,\"50  "not store more than 50 registers in viminfo
if v:lang =~ "utf8$" || v:lang =~ "UTF-8$"
    set fileencodings=utf-8
endif

function! MySys()
    if has("win16") || has("win32") || has("win64")
        return "win"
    else
        return "linux"
    endif
endfunction

"set cursorline
set cursorcolumn
set colorcolumn=108
set number
set numberwidth=1
set history=100
syntax on
set hlsearch
syntax enable
filetype on
filetype plugin on
filetype indent on

set t_Co=256
color mycolor 


"set list
set magic
set mousemodel=extend
set ignorecase
set showmatch

set softtabstop=4
set smarttab
set expandtab

set noerrorbells
let mapleader=","

""""""""""""TagList"""""""""""""""""
let Tlist_Auto_Update=1
let Tlist_Use_Right_Window=1
let Tlist_Sort_Type="name"
let Tlist_Exit_OnlyWindow=1
let Tlist_Show_One_File=1
let Tlist_File_Fold_Auto_Close=1

"map TT :ExpjSelectToggle<CR>

"""""""""""""""Explore"""""""""""""""
let g:explVertical=1	    " split horizontally
let g:explSplitRight=1		" put the explorer window left
let g:explStartRight=0		" put the explorer window left
let g:explWinSize=30
let g:explSortBy='name'
let g:explDirsFirst=1
"let g:explVertical=1		" split vertically
"et g:explSplitRight=0		" put the explorer window left
map ,se :Sexplore<CR>
map ,exp :Explore<CR>

"""""""""""""""""""""""""""""""""""""
"Close Pair
"""""""""""""""""""""""""""""""""""""
:inoremap ) <c-r>=ClosePair(')')<CR>
:inoremap } <c-r>=ClosePair('}')<CR>
:inoremap ] <c-r>=ClosePair(']')<CR>
:inoremap > <c-r>=ClosePair('>')<CR>

function ClosePair(char)
	if getline('.')[col('.') - 1] == a:char
		return "\<Right>"
	else
		return a:char
	endif
endf

" NERD tree
map <leader>ne :NERDTree<CR>
let NERDChristmasTree=1
"let NERDTreeWinPos='left'
let NERDTreeShowLineNumbers=0

if has("autocmd")
    autocmd BufReadPre,BufNewFile,BufRead *.do *.tree setf tcl
    autocmd BufReadPre,BufNewFile,BufRead *.log setf log
